@model Serene3.Common.DashboardPageModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["PageId"] = "Dashboard";
}

@section Head {
@Html.StyleBundle("Pages/Dashboard")
@*@Html.ScriptBundle("Pages/Dashboard")*@
}

@section ContentHeader {
    <h1>@LocalText.Get("Navigation.Dashboard")<small>@Html.Raw(Texts.Site.Dashboard.ContentDescription)</small></h1>
}

<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-aqua">
            <div class="inner">
                @*<h3>@Model.OpenOrders</h3>*@
                <p>Open Contract</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a href="~/SpringPrintingConnection/VHopDongTrangThai" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                @*<h3>@Model.ClosedOrderPercent<sup style="font-size: 20px">%</sup></h3>*@
                <p>Input stock</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="~/SpringPrintingConnection/TblBoBtp" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-yellow">
            <div class="inner">
                @*<h3>@Model.CustomerCount</h3>*@
                <p>Output stock</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a href="~/SpringPrintingConnection/TblXuatKhoChiTiet" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-red">
            <div class="inner">
                @*<h3>@Model.ProductCount</h3>*@
                <p>View status </p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="~/SpringPrintingConnection/VChiTietBtp" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div><!-- ./col -->
</div><!-- /.row -->
<!-- Main row -->
<div class="row">
    <!-- main col (We are only adding the ID to make the widgets sortable)-->
    <section class="col-lg-12 connectedSortable">
        <!-- image box -->
        <div class="box box-solid bg-light-blue-gradient">
            <div class="box-header">
                <i class="fa fa-map-marker"></i>
                <h3 class="box-title">
                    Process...
                </h3>
            </div>
            <div class="box-body">
                <div style="height: 550px; width: 100%;">
                    <img src="~/Content/images/process.png" alt="" style="height: 100%; width: 100%; object-fit: contain"/>
                </div>
            </div>
 
        </div>
        <!-- /.box -->
    </section><!-- right col -->
</div><!-- /.row (main row) -->
